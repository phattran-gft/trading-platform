module Daml.Trading.Reward.Badge where 

data BadgeTypes 
  = Novice_Trader
  | Pro_Trader
  | Hall_of_Fame_Trader
  deriving (Eq, Show)

template BadgeIssuance
  with
    admin : Party
    user : Party
    rewardPoint : Int 
    badge : BadgeTypes

  where
    signatory admin 
    observer admin, user
